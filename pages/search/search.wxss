page{
  color: #666;
  font-size: 32rpx;
}
.fixed-box{
  width: 100%;
  background-color: #FFF;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}
.search{
  display: flex;
  align-items: center;
  margin: 30rpx 30rpx 15rpx;
  padding: 15rpx 25rpx;
  background-color: #f4f6f9;
  border-radius: 15rpx;
}
.search .search-img{
  width: 32rpx;
  height: 32rpx;
}
.search .search-input{
  padding:0 30rpx;
  width: 80%;
}
.header{
  background-color: #f4f6f9;
  color: #666;
  padding: 15rpx 30rpx;
  font-size: 30rpx;
}
.cities{
  margin-top: 184rpx;
}
.city{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f4f6f9;
}