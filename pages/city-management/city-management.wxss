page{
  color: #fff;
  background: linear-gradient(rgb(25, 24, 95),rgb(114, 87, 236));
}
.cities{
  margin-bottom: 100rpx;
}
.cities .city-box{
  background:rgb(25, 24, 95);
}
.cities .city{
  height: 120rpx;
  background:inherit;
  padding: 0 30rpx;
  font-size: 32rpx;
  position: relative;
}
.cities .city .location-img{
  width: 30rpx;
  height: 32rpx;
  margin-left: 10rpx;
}
.cities .city .weather{
  position: absolute;
  right: 30rpx;
  top: 0;
  text-align: center;
}
.cities .city .noUpdate{
  line-height: 120rpx;
}
.cities .city .weather .tmp{
  font-size:50rpx; 
  margin-top: 10rpx;
}
.cities .city .weather .text{
  font-size:25rpx; 
  color: rgb(206, 206, 206);
}
.add{
  text-align: center;
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  background-color:#6c53e3;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.add .add-img{
  width: 32rpx;
  height: 32rpx;
}
.add .text{
   font-size: 20rpx;
}